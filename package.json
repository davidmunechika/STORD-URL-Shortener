{
  "name": "url-shortener",
  "version": "1.0.0",
  "description": "STORD URL Shortener Coding Exercise",
  "main": "server.js",
  "scripts": {
    "start": "concurrently \"node server.js\" \"npm run client\"",
    "dev": "concurrently \"nodemon server.js\" \"npm run client\"",
    "client": "npm start --prefix client",
    "setup": "npm i & (cd client && npm i)",
    "cypress:run": "./node_modules/.bin/cypress run",
    "test": "npm run test-api && npm run test-client",
    "test-api": "cd test/api && mocha server.test.js",
    "test-client": "npm run cypress:run",
    "ci": "start-server-and-test start http://localhost:3000 test-client"
  },
  "author": "David Munechika",
  "license": "ISC",
  "dependencies": {
    "chai": "^4.3.4",
    "concurrently": "^6.0.0",
    "cors": "^2.8.5",
    "cypress": "^6.8.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mocha": "^8.3.2",
    "mongoose": "^5.12.1",
    "nodemon": "^2.0.7",
    "shortid": "^2.2.16",
    "start-server-and-test": "^1.12.1",
    "supertest": "^6.1.3",
    "valid-url": "^1.0.9"
  }
}
